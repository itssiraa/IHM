<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.AnchorPane?>


<AnchorPane fx:id="quitDialogRoot"
            xmlns="http://javafx.com/javafx/8"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="com.example.project_ihm.controllers.GameManager"
            prefWidth="400" prefHeight="200"
            stylesheets="@../css/style.css">

    <children>
        <Label text="Voulez-vous vraiment quitter ?"
               layoutX="50" layoutY="50"
               style="-fx-font-size: 18px;"/>

        <Button text="Oui"
                fx:id="yesButton"
                layoutX="90" layoutY="120"
                prefWidth="80"
                onAction="#onYesClicked"/>

        <Button text="Non"
                fx:id="noButton"
                layoutX="230" layoutY="120"
                prefWidth="80"
                onAction="#onNoClicked"/>
    </children>
</AnchorPane>
